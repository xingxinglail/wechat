border-1px($color)
  position relative
  &::after
    content ''
    position absolute
    width 100%
    height 1px
    bottom 0
    left 0
    background-color $color

border-t-1px($color)
  position relative
  &::before
    content ''
    position absolute
    width 100%
    height 1px
    top 0
    left 0
    background-color $color